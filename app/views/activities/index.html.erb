<p id="notice"><%= notice %></p>

<div class="container flex-grow-1 p-2 text-center">
  <h3>Activities</h3>
  <hr>
  <div class="row p-2">
    <div class="col-4">
      <p class="text-left">Your goal:</p>
      <p class="text-left">Last recorded weight:</p>
    </div>
    <div class="col-8">
      <%= content_tag :div, "", id: "activity_chart",style: "height: 200px", data: {activities: activity_chart_data}%>
    </div>
  </div>
  <div class="row p-3">
    <div class="col-12">
      <table class="table table-bordered" id="acti">
        <thead>
          <tr class="tablehead">
            <th>Name</th>
            <th>Date</th>
            <th>Duration</th>
            <th>Weight</th>
            <th>Calories</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @activities.each do |activity| %>
            <tr>
              <td scope="row" ><%=link_to activity.name, activity %></td>
              <td><%= activity.date %></td>
              <td><%= activity.duration %></td>
              <td><%= activity.weight %></td>
              <td><%= activity.calories %></td>
              <td><%= link_to 'Edit', edit_activity_path(activity) %></td>
              <td><%= link_to 'Destroy', activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

</div>
