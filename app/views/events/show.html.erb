<div class="container flex-grow-1 p-3 text-center">
  <h3><%= @event.name %></h3>
  <hr>
  <div class="row mx-4 ">
    <div class="col-sm-12 col-md-12 my-2 ">
        <div class="card" >            
            <div class="card-body">              
              <div class="row py-2">
                <div class="col-2 eventdate">
                  <div class="month text-uppercase"><%= @event.datestart.strftime("%b")%></div>
                  <div class="day"><%= @event.datestart.strftime("%d")%></div>
                </div>
                <div class="col-10 text-left">
                  <p class="card-title text-uppercase"><strong><%= @event.name %></strong></p> 
                  <p><strong>Date : </strong><%= @event.datestart.strftime("%b")%> <%=@event.datestart.strftime("%d")%> - 
                  <%= @event.dateEnd.strftime("%b")%> <%=@event.dateEnd.strftime("%d")%> <br/> <strong>Location : </strong> <%= @event.location %> </p>
                  <div class="dropdown-divider"></div>
                  <p class="card-text"><%= @event.shortDesc %></p>
                  <p class="card-text"><%= @event.description %>
                  </p>
                </div>
              </div>
              <div class="dropdown-divider"></div>
              <% if user_signed_in? && current_user.id == @event.user_id %>
                <%= link_to 'Edit event', edit_event_path(@event), class:"mx-4 " %> |
              <%end%>
              <%= link_to 'See all events', events_path, class:"mx-4 " %>
            </div>
          </div>
    </div>
  </div>
</div> 